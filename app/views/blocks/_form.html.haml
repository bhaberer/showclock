= form_for [@event, @day, @block] do |f|
  - if @block.errors.any?
    #error_explanation
      %h2= "#{pluralize(@block.errors.count, "error")} prohibited this block from being saved:"
      %ul
        - @block.errors.full_messages.each do |message|
          %li= message


  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :block_type
    = f.select :block_type, Block.types_for_select, {}, { class: 'form-control' }
  .form-group
    = f.label :duration
    = f.number_field :duration, class: 'form-control'

  = f.hidden_field :day_id, value: @day.id
  .actions
    = f.submit 'Save'
