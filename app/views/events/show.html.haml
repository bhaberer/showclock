.default.event[@event]
  %h2= @event.name

  .row
    .col-md-12
      = link_to 'Update Days', event_days_path(@event), class: 'btn btn-info'
      = link_to 'Edit Event', edit_event_path(@event), class: 'btn btn-info'
  %br
  - if @days.present?
    .row
      .col-md-12
        %h4 Days
        %ul
          - @days.each do |day|
            %li= link_to day.name, event_day_path(@event, day)
