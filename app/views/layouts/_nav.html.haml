%nav.navbar.navbar-expand-lg.fixed-top.navbar-dark.bg-dark
  = link_to 'Show Clock', :root, class: 'navbar-brand'
  %button.navbar-toggler{ type: :button, 'data-toggle': :collapse,
                          'data-target': "#navbar-nav", 'aria-controls': 'navbar-nav',
                          'aria-expanded': 'false', 'aria-label': 'Toggle navigation' }
    %span.navbar-toggler-icon
  .collapse.navbar-collapse#navbar-nav
    %ul.navbar-nav.mr-auto.mt-2.mt-lg-0
      %li.nav-item
        = link_to 'Events', events_path,
                            class: "nav-link #{controller_name == 'events' ? 'active' : ''}"
      - if @event && @event.persisted?
        %li.nav-item
          = link_to @event.name, @event,
                    class: "nav-link active"
        %li.nav-item
          = link_to 'Days', event_days_path(@event),
                    class: "nav-link #{controller_name == 'days' ? 'active' : ''}"
        - if @day && @day.persisted?
          = link_to @day.name, event_day_path(@event, @day),
                    class: "nav-link active"
          %li.nav-item
            = link_to 'Blocks', event_day_blocks_path(@event, @day),
                      class: "nav-link #{controller_name == 'blocks' ? 'active' : ''}"
